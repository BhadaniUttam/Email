<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp">

            <ImageView
                android:id="@+id/activity_other_item_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/baseline_star_border_24"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_other_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="10dp"
            android:text="Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/activity_other_item_num"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="start|bottom"
            android:padding="10dp"
            android:text="Number"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_other_item_dis"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="start|bottom"
                android:padding="10dp"
                android:text="Discription"
                android:textSize="15sp" />

<!--            <ImageButton-->
<!--                android:id="@+id/activity_other_item_star"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="0."-->
<!--                android:background="@drawable/baseline_star_border_24"-->
<!--                android:gravity="end" />-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_star_border_24" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

